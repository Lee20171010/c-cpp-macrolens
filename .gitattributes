# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.mjs text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf
.npmrc text eol=lf
.vscodeignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.vsix binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Node modules (shouldn't be in repo, but just in case)
node_modules/** -text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
